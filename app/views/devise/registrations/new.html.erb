<%= content_for :page_title, "Sign Up" %>

<section class="section">
  <div class="container">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="field">
      <div class="control">
        <%= f.input :email, required: true, autofocus: true, wrapper: false, label_html: { class: 'label'}%>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), wrapper: false, label_html: { class: 'label'} %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :password_confirmation, required: true, wrapper: false, label_html: { class: 'label'} %>
      </div>
    </div>
    <span>
      <%= f.button :submit, "Sign up", class: "button is-info" %>
      <%= link_to "Home", root_path, class: "button is-info" %>
    <span>
  <% end %>
</div>
</section>

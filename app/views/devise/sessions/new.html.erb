<%= content_for :page_title, "Log In" %>

<section class="section">
  <div class="container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="control">
          <%= f.input :email, required: false, autofocus: true, wrapper: false, label_html: { class: 'label'} %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :password, required: false, wrapper: false, label_html: { class: 'label'} %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>

      <span>
        <%= f.button :submit, "Log in", class: "button is-info"%>
        <%= link_to "Home", root_path, class: "button is-info" %>
      </span>
  </div>
  <div class="container">
    <%= render "devise/shared/links" %>
  </div>
    <% end %>
  </div>
</section>
